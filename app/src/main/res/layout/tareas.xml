<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="jueves 20 de enero"
            android:gravity="center"
            android:textSize="20dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="asignadas"
            android:background="#F8E12E"
            android:textColor="#000"
            android:layout_alignParentLeft="true"/>


        <Button
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Por Entregar"
            android:layout_alignParentRight="true"
            android:background="#DDC92D"
            android:textColor="#666" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TableRow
                android:background="@color/colorPrimary"
                android:padding="5dp">
                <TextView
                    android:text="Asignatura"
                    android:layout_weight=".3"
                    android:textAlignment="center"
                    android:textColor="#fff"/>
                <TextView
                    android:text="Tarea"
                    android:layout_width="250dp"
                    android:textAlignment="center"
                    android:textColor="#fff"/>

                <TextView
                    android:text="Lista"
                    android:layout_weight=".3"
                    android:textAlignment="center"
                    android:textColor="#fff"/>


            </TableRow>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#009fdb"/>

            <TableRow
                android:padding="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Español"
                    android:layout_weight=".3"
                    android:textColor="#666"
                    android:textSize="12dp"/>

                <TextView
                    android:text="En este campo deberá ir la descrpcion de la tarea y la podrá checar el alumno"
                    android:layout_width="250dp"
                    android:textColor="#666"
                    android:textSize="12dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"/>
                <ImageView
                    android:background="@mipmap/checktarea"
                    android:layout_height="10dp"
                    android:layout_width="10dp" />
            </TableRow>
                <View android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#DDC92D">

                </View>

            <TableRow
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Matenmáticas"
                    android:layout_weight=".3"
                    android:textColor="#666"
                    android:textSize="12dp"/>

                <TextView
                    android:text="En este campo deberá ir la descrpcion de la tarea y la podrá checar el alumno"
                    android:layout_width="250dp"
                    android:textColor="#666"
                    android:textSize="12dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"/>
                <TextView
                    android:text="M"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <View android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#DDC92D">

            </View>


        </TableLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:background="@mipmap/educarok"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>


</LinearLayout>